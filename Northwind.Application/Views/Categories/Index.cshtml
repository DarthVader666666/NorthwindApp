@using Northwind.Application.Constants
@model IEnumerable<Northwind.Application.Models.Category.CategoryIndexModel>
@{
    ViewData["PreviousPage"] = ViewBag.PreviousPage;
    ViewData["ControllerName"] = "Categories";
    ViewData["ActionName"] = "Delete";
    ViewData["PageStartNumbering"] = ViewBag.PageStartNumbering;
}

<h1>Categories</h1>

@if (User.IsInRole(UserRoles.Admin) || User.IsInRole(UserRoles.Owner) || User.IsInRole(UserRoles.Employee))
{
    @await Html.PartialAsync("_IndexButtonsPartial", null as SelectList)
}

@await Html.PartialAsync("_GridFormPartial", Model, ViewData)
