@model IEnumerable<Northwind.Application.Models.Category.CategoryIndexModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Categories</h1>

<button class="btn btn-primary" onclick="location.href = '@Url.ActionLink("Create", "Categories")'">
    Create New
</button>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Picture)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr onclick="location.href = '@Url.ActionLink("Details", "Categories", new { id = item.CategoryId })'" style="cursor:pointer">
            <td>
                @Html.DisplayFor(modelItem => item.CategoryName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <img src="data:image/bmp;base64,@Convert.ToBase64String(item.Picture! ?? new byte[0])" style="height:60px;width:60px;" />
            </td>
            <td>
                <ul style="list-style-type: none;">
                    <li class="mb-1">
                        <a asp-action="Edit" asp-route-id="@item.CategoryId">Edit</a>
                    </li>
                    <li>
                        <a asp-action="Delete" asp-route-id="@item.CategoryId">Delete</a>
                    </li>
                </ul>
            </td>
        </tr>
}
    </tbody>
</table>
