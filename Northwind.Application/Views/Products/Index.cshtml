@using Northwind.Application.Constants
@addTagHelper *, Northwind.Application
@model Northwind.Application.Models.Product.ProductIndexModel
@{
    ViewData["PreviousPage"] = ViewBag.PreviousPage;
    ViewData["ControllerName"] = "Products";
    ViewData["ActionName"] = "Delete";
    ViewData["CategoryId"] = ViewBag.CategoryId;
    ViewData["ForeignKeyValue"] = ViewBag.CategoryId;
    ViewData["ForeignKeyName"] = "categoryId";
}

<h1>@(ViewBag.CategoryName != "" ? $"\"{ViewBag.CategoryName}\"" : string.Empty) Product List</h1>

@if (User.IsInRole(UserRoles.Admin))
{
    <div class="row">
        <div class="col-3 align-content-center">
            <h5 class="float-end">Category:</h5>
        </div>
        <div class="col-6">
            @if (Model.CategoryList != null)
            {
                <select onchange="onCategorySelectListChange(value)" class="form-select">
                    @foreach (var option in Model.CategoryList ?? throw new ArgumentNullException("Category List is null"))
                    {
                        if (option.Selected)
                        {
                            <option value="@option.Value" selected>@option.Text</option>
                        }
                        else
                        {
                            <option value="@option.Value">@option.Text</option>
                        }
                    }
                </select>
            }
        </div>
        <div class="col-2">
            @await Html.PartialAsync("_IndexButtonsPartial")
        </div >
    </div>
}

@if (Model.Products.Any())
{
    @await Html.PartialAsync("_TableFormPartial", Model.Products, ViewData)
    <page-link page-model="Model.PageViewModel" page-action="Index"></page-link>
}
else
{
    <h1>List is empty</h1>
    @if (ViewData["PreviousPage"] != null)
    {
        <button class="btn btn-primary fw-bold" onclick="location.href = '@ViewData["PreviousPage"]'">Back</button>
    }
}

<script>
    function onCategorySelectListChange(value) {
        const url = `/Products?categoryId=${value}`;
        window.location.href = window.location.origin.concat(url);
    }
</script>