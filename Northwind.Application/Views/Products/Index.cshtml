@addTagHelper *, Northwind.Application
@model Northwind.Application.Models.Product.ProductIndexModel
@{
    ViewData["PreviousPage"] = ViewBag.PreviousPage;
    ViewData["ControllerName"] = "Products";
    ViewData["ActionName"] = "Delete";
    ViewData["Id"] = ViewBag.Id;
}

<h1>@(ViewBag.CategoryName != "" ? $"\"{ViewBag.CategoryName}\"" : string.Empty) Product List</h1>

@if (User.IsInRole("admin"))
{
    <div class="pb-3 pt-3 row" style="max-width:500px;">
        <div class="col-md-3">
            <h4>Category:</h4>
        </div>
        <div class="col-md-9">
            <select onchange="onCategorySelectListChange(value)" class="form-select">
                @foreach (var option in Model.CategoryList!)
                {
                    if (option.Selected)
                    {
                        <option value="@option.Value" selected>@option.Text</option>
                    }
                    else
                    {
                        <option value="@option.Value">@option.Text</option>
                    }
                }
            </select>
        </div>
    </div>
}

@await Html.PartialAsync("_IndexButtonsPartial", ViewData)

@if (Model.Products.Any())
{
    @await Html.PartialAsync("_TableFormPartial", Model.Products, ViewData)
    <page-link page-model="Model.PageViewModel" page-action="Index" class="float-end"></page-link>
}
else
{
    <h1>List is empty</h1>
    @if (ViewData["PreviousPage"] != null)
    {
        <button class="btn btn-primary fw-bold" onclick="location.href = '@ViewData["PreviousPage"]'">Back</button>
    }
}

<script>
    function onCategorySelectListChange(value) {
        console.log(value)
        window.location.href = `Products?categoryId=${value}`;
    }
</script>