@model IEnumerable<Northwind.Application.Models.Roles.UserIndexModel>

<h2>User List</h2>
<table class="table-bordered">
    <thead>
        <tr>
            <th>
                User Name
            </th>
            <th>
                Roles
            </th>
            <th>
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>
                    <ul>
                        @foreach (var roleName in user.RoleNames ?? Enumerable.Empty<string>())
                        {
                            <li>
                                @roleName
                            </li>
                        }
                    </ul>
                </td>
                <td class="align-content-center" style="text-align:center;">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-userid="@user.Id">Change Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<style>
    td{
        padding: 10px;
        min-width: 10rem;
    }

    th{
        align-content:center;
        text-align:center;
        padding:3px;
    }

    ul {
        list-style: none;
        padding-left: 0px;
        margin-bottom: 0px;
    }
</style>