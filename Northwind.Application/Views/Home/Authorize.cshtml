@model NorthwindApp.Models.AuthorizationViewModel

<form method="post" asp-action="DeletePost">
    <div class="border p-3 text-center">
        <div class="form-group row">
            <label asp-for="UserName"></label>
        </div>
        <div class="col-6">
            <input asp-for="UserName" class="form-control" />
            <span asp-validation-for="UserName" class="text-danger"></span>
        </div>
        <div class="form-group row">
            <label asp-for="UserRole"></label>
        </div>
        <div class="col-6">
            <input asp-for="UserRole" class="form-control" />
            <span asp-validation-for="UserRole" class="text-danger"></span>
        </div>
    </div>
    <div class="row">
        <div class="col-12">
            <div class="form-group row">
                <div class="col-6">
                    <input asp-action="GetToken" asp-route-id="@Model" type="submit" class="btn btn-danger w-75" value="Yes" />
                </div>
                <div class="col-6">
                    <a asp-action="Index" class="btn btn-success w-75">No</a>
                </div>
            </div>
        </div>
    </div>
</form>
