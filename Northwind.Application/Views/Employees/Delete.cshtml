@model IEnumerable<Northwind.Application.Models.Employee.EmployeeIndexModel>
@{
    ViewData["PreviousPage"] = ViewBag.PreviousPage;
    ViewData["ControllerName"] = "Employees";
    ViewData["ActionName"] = "DeleteConfirmed";
    ViewData["FormMethod"] = "post";
    ViewData["Hidden"] = "hidden";

    var count = Model.Count();
}

<h1>Are you sure you want to delete @(count > 1 ? "these" : "this")</h1>
<h4>@(count > 1 ? "Employees" : "Employee")?</h4>
<hr />

@await Html.PartialAsync("_TableFormPartial")
<button form="form" class="btn btn-danger float-end" type="submit">Delete</button>