@model IEnumerable<Northwind.Application.Models.Employee.EmployeeIndexModel>

@{
    ViewData["Title"] = "Employees";
    var createLink = User.IsInRole("guest") ? Url.ActionLink("Create", "GuestEmployees") : Url.ActionLink("Create", "Employees");
}

<h1>Employees</h1>

<button class="btn btn-primary" onclick="location.href = '@createLink'">
    Create New
</button>

<table class="table">
    <thead>
        <tr>
            <th>
                Full Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HireDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Photo)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            <tr onclick="location.href = '@Url.ActionLink("Details", User.IsInRole("guest") ? "GuestEmployees" : "Employees", new { id = item.EmployeeId })'" style="cursor:pointer">
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td class="align-middle">
                @Html.DisplayFor(modelItem => item.HireDate)
            </td>
            <td>
                <img src="data:image/bmp;base64,@Convert.ToBase64String(item.Photo!)" style="height:60px;width:60px;" />
            </td>
            <td class="align-middle">
                <ul style="list-style-type: none;">
                    <li class="mb-1">
                        <a asp-action="Edit" asp-route-id="@item.EmployeeId">Edit</a>
                    </li>
                    <li>
                        <a asp-action="Delete" asp-route-id="@item.EmployeeId">Delete</a>
                    </li>
                </ul>
            </td>
        </tr>
}
    </tbody>
</table>
